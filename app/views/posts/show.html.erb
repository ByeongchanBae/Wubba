<h1> Posts </h1>

<h2> <%= @post.title %> </h2>
<p> <%= @post.description %> </p>

<% if current_user == @post.user %>
  <%= link_to 'Edit', '#', class:"btn btn-secondary" %>
  <%= link_to 'Delete Post', @post, method :delete, data: { confirm: 'Are you sure you want to remove this post?'}, class:"btn btn-danger" %>
<% end %>
