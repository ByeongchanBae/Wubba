<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Home", dashboard_path, class: "nav-link" %>
        </li>
        <li class="nav-item">

          <!-- we want this to go to matches/(last matched id) -->
          <% if current_user.matches.last.present? %>
          <%= link_to "Matches", match_path(current_user.matches.last), class: "nav-link" %>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to "Posts", posts_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Search partner", matches_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>
        <% else %>
        <li class="nav-item">
          <%= link_to "LOGIN", new_user_session_path, class: "login" %>
        </li>
        <li class="nav-item">
          <%= link_to "SIGN UP", new_user_registration_path, class:"btn-primary sign" %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
  <a class="wubba" href="#"
    >WUBBA</a>

  <div class="pictures">
    <%= link_to dashboard_path do %>
    <i class="far fa-bell fa-lg" ></i>
      <% if user_signed_in? %>
      <span class="badge badge-danger js-notification-count fa-sm" style="
    position: absolute;
    left: -27px;
" ><%= current_user.notifications.unread.count %></span>
      <% end %>
    <% end %>
      <% if user_signed_in? %>
      <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle" %>
      <% end %>
  </div>
</div>
