<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
  <li class="nav-item" role="presentation">
    <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Home</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Profile</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Contact</a>
  </li>
</ul>

<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
    <h1>Welcome <%= @user.first_name %> <%= @user.last_name %></h1>
    <h2>Here are some possible matches</h2>
    <div class="card-trip">
      <% @list_of_possibles.each do |possible| %>
      <div class="card-trip-infos">
        <h3><%= possible.first_name %> <%= possible.last_name %></h3>
        <p>Username: <%= possible.username %></p>
        <p>Experience: <%= possible.experience_level %></p>
        <p>Location: <%= possible.city %>, <%= possible.country %></p>
        <p>Gender: <%= possible.gender %></p>
        <p>Education: <%= possible.education %></p>
        <p>Bootcamp: <%= possible.bootcamp %></p>
        <p>Employment Status: <%= possible.employment_status %></p>
        <a href="#" class="btn-blue">Message me</a>
      </div>
      <% end %>
    </div>
  </div>
  <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
    <h1> Your profile </h1>
    <div class="card-trip">
      <% if @user.avatar.attached? %>
      <%= cl_image_tag(@user.avatar.key, :transformation=>[
        {:width=>400, :height=>400, :gravity=>"face", :radius=>"max", :crop=>"crop"},
        {:width=>150, :crop=>"scale"}
        ]) %>
        <% end %>
        <h2> <%= @user.first_name %> <%= @user.last_name %> </h2>
        <p> Location: <%= @user.city %>, <%= @user.country %> </p>
        <p> Education: <%= @user.education %> </p>
        <p> Bootcamp? <%= @user.bootcamp %> </p>
      </div>
    </div>
  <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
    <h2> Here are your matches: </h2>
  </div>
</div>

