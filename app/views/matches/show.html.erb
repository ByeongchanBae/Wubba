<% @matches.each do |match|%>
<%= match.partner(current_user).first_name %>
<% end %>

<div id="messages" data-match-id="<%= @matches %>">
  <% @matches.match_message.each do |message| %>
    <div class="message-container" id="message-<%= message.id %>">
      <i class="author">
        <span><%= message.user.first_name %></span>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </i>
      <p><%= message.content %></p>
    </div>
  <% end %>
</div>

<%= simple_form_for [ @matches, @match_message ], remote: true do |f| %>
  <%= f.input :content, label: false, placeholder: "Message #{@matchee.first_name}" %>
<% end %>

