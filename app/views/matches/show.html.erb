<% @matches.each do |match|%>
<h1> Conversation with <%= match.partner(current_user).first_name %></h1>
<% end %>

<% if @match.status == 2 %>
<div id="messages" data-match-id="<%= @matches %>">
  <% @match.match_messages.each do |message| %>
    <div class="message-container" id="message-<%= message.id %>">
      <i class="author">
        <span><%= message.user.first_name %></span>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </i>
      <p><%= message.content %></p>
    </div>
  <% end %>
</div>

<%= simple_form_for [ @match, @match_message ] do |f| %>
  <%= f.input :content, label: false, placeholder: "Message #{@match.partner(current_user).first_name}" %>
<% end %>
<% else %>
<p>This match does not exist yet</p>
<% end %>
