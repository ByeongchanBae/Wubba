
<div class="container-fluid ">
  <div class=row>
    <div class="col-3">
      <% @matches.each do |match|%>
      <%= link_to match_path(match) do %>
      <div class="card-chat">
        <p><%= match.partner(current_user).first_name %></p>
      </div>
      <% end %>
      <% end %>
    </div>
    <div class="col-9">
      <% if @match.status == 2 %>
      <div id="messages" data-match-id="<%= @matches %>">
        <% @match.match_messages.each do |message| %>

        <div class="message-container" id="message-<%= message.id %>">
          <i class="author">
            <span><%= message.user.first_name %></span>
            <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
          </i>
          <p><%= message.content %></p>
          <% end %>
        </div>
      </div>
      <div class="chat-box">
        <%= simple_form_for [ @match, @match_message ] do |f| %>
        <%= f.input :content, label: false, placeholder: "Message #{@match.partner(current_user).first_name}" %>
        <%= f.submit "Send", class: "btn btn-primary" %>
        <% end %>
        <% else %>
        <p>This match does not exist yet</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
